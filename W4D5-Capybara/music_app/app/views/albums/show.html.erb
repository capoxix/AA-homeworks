<table>
  <tr>
    <td> Band </td>
    <td> Title </td>
    <td> Year </td>
    <td> Live </td>
  </tr>
  <tr>
    <td><%= @album.band.name %></td>
    <td><%= @album.title%></td>
    <td><%= @album.year%></td>
    <td><%= @album.live%></td>
    <td><a href="<%=edit_album_url(@album)%>"> Edit Album</a> </td>
    <td>
      <form action="<%=album_url(@album)%>" method="post">
        <input type="hidden" name="_method" value="delete">
        <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
        <input type="submit" value="Delete Album">
      </form>
    </td>
  </tr>
</table>

<br>
<br>

<a href="<%= new_album_track_url(@album.id) %>"> Create new track</a>

<table>
  <tr>
    <td>Title</td>
    <td>Track #</td>
    <td>Bonus</td>
  </tr>
<% @album.tracks.each do |track| %>
<tr>
  <td><%= track.title%></td>
  <td><%= track.ord%></td>
  <td><%= track.bonus%></td>
  <td><a href="<%=edit_track_url(track)%>"> Edit Track</a> </td>
  <td>
    <form action="<%=track_url(track)%>" method="post">
      <input type="hidden" name="_method" value="delete">
      <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
      <input type="submit" value="Delete Track">
    </form>
  </td>
</tr>
<% end %>
</table>
