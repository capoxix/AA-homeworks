<%
if action == :new
  submit_text = "Create Band"
  action_url = bands_url
elsif action == :edit
  submit_text = "Update Band"
  action_url = band_url(@band)
end
 %>

<% if flash[:error] %>
<ol>


  <% flash[:error].each do |error| %>
  <li>error: <%= error %></li>
  <% end %>
  </ol>
<% end %>

<form class="" action="<%= action_url %>" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <% if action == :edit %>
  <input type="hidden" name="_method" value="patch">
  <% end %>
  <label for="name">Band name:
  <input type="text" name="band[name]" value="<%= band.name%>">
  </label>

  <input type="submit" value="<%=submit_text%>">
</form>
